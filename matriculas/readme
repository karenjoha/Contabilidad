-- Tabla para los datos del alumno
CREATE TABLE datos_alumno (
    id_alumno INT AUTO_INCREMENT PRIMARY KEY,
    nombre_alum VARCHAR(255) NOT NULL,
    primer_apellido VARCHAR(255) NOT NULL,
    segundo_apellido VARCHAR(255),
    tipo_documento VARCHAR(50) NOT NULL,
    documento VARCHAR(50) NOT NULL,
    fecha_nacimiento DATE NOT NULL,
    sexo ENUM('MASCULINO', 'FEMENINO') NOT NULL,
    lugar_nacimiento VARCHAR(255),
    nacionalidad VARCHAR(255),
    direccion VARCHAR(255) NOT NULL,
    barrio VARCHAR(255),
    estrato INT,
    comuna VARCHAR(50),
    celular VARCHAR(20) NOT NULL,
    segundo_celular VARCHAR(20),
    email VARCHAR(255)
);

-- Tabla para la ficha m√©dica
CREATE TABLE ficha_medica (
    id_matricula INT PRIMARY KEY,
    grupo VARCHAR(50) NOT NULL,
    jornada VARCHAR(50) NOT NULL,
    periodo_lectivo VARCHAR(50) NOT NULL,
    procedencia VARCHAR(255) NOT NULL,
    FOREIGN KEY (id_matricula) REFERENCES datos_alumno(id_alumno)
);

-- Tabla para los datos del acudiente
CREATE TABLE datos_acudiente (
    id_acudiente INT PRIMARY KEY,
    id_alumno INT,
    nombre_acudiente VARCHAR(255) NOT NULL,
    celular_acudiente VARCHAR(20) NOT NULL,
    parentezco VARCHAR(100) NOT NULL,
    tipo_documento VARCHAR(50) NOT NULL,
    documento VARCHAR(50) NOT NULL,
    FOREIGN KEY (id_alumno) REFERENCES datos_alumno(id_alumno)
);
