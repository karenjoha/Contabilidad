{
	"editor.minimap.enabled": false,
	"editor.useTabStops": true,
	"editor.tabSize": 4,
	"editor.indentSize": "tabSize",
	"editor.insertSpaces": true,
	"editor.detectIndentation": false,
	"html.format.wrapLineLength": 0,
	"html.format.wrapAttributes": "auto",
	"workbench.editooff": true,
	"php.debug.executablePath": null,
	"php.validate.executablePath": null,
	"php-intellisense.trace.server": "off",
	"php.inlayHints.types.suppressVariableFromLiteral": false,
	"php.format.rules.alignConsecutiveAssignments": true,
	"php.format.rules.callParametersNewLineBeforeRightParen": false,
	"php.format.rules.callParametersWrap": "off",
	"php.completion.parameters": "none",
	"php.completion.showNamespaceLabel": false,
	"php.hover.parameters": false,
	"php.problems.scope": "none",
	"phpunit.enableAutomaticRefresh": false,
	"php.completion.autoimport-docblock": "none",
	"php.completion.autoimport": "none",
	"php.format.codeStyle": "K&R",
	"php.format.rules.spaceAroundConcatenation": true,
	"php.format.rules.spaceBeforeParenthesesInControlStatements": true,
	"[php]": {
		"editor.defaultFormatter": "DEVSENSE.phptools-vscode",
		"editor.formatOnSave": true,
	},
	"[javascript]": {
		"editor.defaultFormatter": "vscode.typescript-language-features",
		"editor.formatOnSave": true,
	},
	"[css]": {
		"editor.defaultFormatter": "vscode.css-language-features",
		"editor.formatOnSave": true,
	},
	"[jsonc]": {
		"editor.defaultFormatter": "vscode.json-language-features",
		"editor.formatOnSave": true,
	},
	"[json]": {
		"editor.defaultFormatter": "vscode.json-language-features",
		"editor.formatOnSave": true,
	},
	"[javascriptreact]": {
		"editor.defaultFormatter": "vscode.typescript-language-features",
		"editor.formatOnSave": true,
	},
	"[typescriptreact]": {
		"editor.defaultFormatter": "vscode.typescript-language-features",
		"editor.formatOnSave": true,
	},
	"[jsx-tags]": {
		"editor.defaultFormatter": "vscode.typescript-language-features",
		"editor.formatOnSave": true,
	}
}